#!/bin/bash

# shellcheck disable=SC1090
. "$(dirname "$0")/reg-tags/image_tags.sh"

for tag in $(img_tags --filter '^[0-9]+(\.[0-9]+)+(-alpine[0-9]+(\.[0-9]+)+)?$' --verbose -- "$(basename "$DOCKER_REPO")"); do
    echo "============== Building ${DOCKER_REPO}:$tag"
    docker push "${DOCKER_REPO}:$tag"
done
